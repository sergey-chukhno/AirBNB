<div class="max-w-7xl w-full mx-auto">
    <!-- Flash Messages -->
    <% if notice %>
        <div class="bg-green-50 border border-green-200 text-green-700 px-4 py-3 rounded-md mb-5">
            <%= notice %>
        </div>
    <% end %>
    
    <% if alert %>
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-md mb-5">
            <%= alert %>
        </div>
    <% end %>

    <%= form_with model: @user, url: settings_path, method: :post, local: true do |f| %>
        <div class="max-w-2xl flex flex-col gap-5 mx-auto">
            <!-- First Name & Last Name Row -->
            <div class="flex gap-4">
                <div class="flex-1">
                    <%= f.label :first_name %>
                    <%= f.text_field :first_name, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
                </div>
                <div class="flex-1">
                    <%= f.label :last_name %>
                    <%= f.text_field :last_name, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
                </div>
            </div>

            <!-- Address 1 & Address 2 Row -->
            <div class="flex gap-4">
                <div class="flex-[2]">
                    <%= f.label :address_1 %>
                    <%= f.text_field :address_1, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
                </div>
                <div class="flex-[1]">
                    <%= f.label :address_2 %>
                    <%= f.text_field :address_2, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
                </div>
            </div>

            <!-- City, State & Zip Row -->
            <div class="flex gap-4">
                <div class="flex-1">
                    <%= f.label :city %>
                    <%= f.text_field :city, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
                </div>
                <div class="flex-1">
                    <%= f.label :state %>
                    <%= f.text_field :state, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
                </div>
                <div class="flex-1">
                    <%= f.label :zipcode, "Zip Code" %>
                    <%= f.text_field :zipcode, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
                </div>
            </div>
        
            <!-- Country -->
            <div class="w-1/3">
                <%= f.label :country %>
                <%= f.text_field :country, class: "block shadow-sm rounded-md border border-gray-400 focus:outline-blue-600 px-3 py-2 mt-2 w-full" %>
            </div>

            <!-- Submit Button -->
            <div class="mt-6">
                <%= f.submit "Save Settings", class: "w-full sm:w-auto rounded-md px-6 py-3 bg-gradient-to-r from-pink-500 to-red-500 hover:from-pink-600 hover:to-red-600 text-white font-medium cursor-pointer transition-all duration-300" %>
            </div>
        </div>
        
    <% end %>
</div>