<%= form_with(model: listing, class: "contents") do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul class="list-disc ml-6">
        <% listing.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": listing.errors[:title].none?, "border-red-400 focus:outline-red-600": listing.errors[:title].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :address %>
    <%= form.text_field :address, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": listing.errors[:address].none?, "border-red-400 focus:outline-red-600": listing.errors[:address].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.rich_textarea :description, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": listing.errors[:description].none?, "border-red-400 focus:outline-red-600": listing.errors[:description].any?}] %>
  </div>

  <div class="my-5" data-controller="image-upload">
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", direct_upload: true, data: { image_upload_target: "input", action: "image-upload#fileAdded" } %>
    
    <!-- Existing images display -->
    <% if listing.images.any? %>
      <div class="mt-4">
        <h4 class="text-sm font-medium text-gray-700 mb-2">Current Images:</h4>
        <div class="grid grid-cols-3 gap-4" data-image-upload-target="existing">
          <% listing.images.each do |image| %>
            <div class="relative" data-image-id="<%= image.id %>">
              <%= image_tag image, class: "w-full h-32 object-cover rounded-lg shadow-md" %>
              <!-- Remove existing image button -->
              <button type="button" 
                      class="absolute top-2 right-2 bg-red-500 text-white rounded-full w-6 h-6 text-sm font-bold hover:bg-red-600 transition-colors cursor-pointer z-10"
                      style="display: flex; align-items: center; justify-content: center; line-height: 1;"
                      data-action="click->image-upload#removeExistingImage"
                      data-image-id="<%= image.id %>">
                &times;
              </button>
              <!-- Hidden input to mark for deletion -->
              <input type="hidden" 
                     id="delete_image_<%= image.id %>" 
                     name="listing[images_to_delete][]" 
                     value=""
                     data-image-id="<%= image.id %>">
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    
    <!-- New image preview container -->
    <div data-image-upload-target="preview" class="grid grid-cols-3 gap-4 mt-4"></div>
  </div>

  <div class="grid grid-cols-3 gap-8 my-5">

    <div class="">
      <%= form.label :bedrooms %>
      <%= form.number_field :bedrooms, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", min: 1 %>
    </div>

    <div class="">
      <%= form.label :bathrooms %>
      <%= form.number_field :bathrooms, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", min: 1 %>
    </div>

    <div class="">
    <%= form.label :people_limit, "Max guests capacity" %>
    <%= form.number_field :people_limit, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", min: 1 %>
  </div>

  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
