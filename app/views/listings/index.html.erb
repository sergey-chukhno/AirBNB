<% content_for :title, "Listings" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Listings</h1>
    <%= link_to "New listing", new_listing_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>
  <br/>
  <div id="listings" class="w-full grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    <% if @listings.any? %>
      <% @listings.each do |listing| %>
        <%= render "listing_card", listing: listing %>
      <% end %>
    <% else %>
      <p class="text-center my-10">No listings found.</p>
    <% end %>
  </div>
</div>
